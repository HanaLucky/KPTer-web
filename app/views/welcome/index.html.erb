<% content_for :head_title do %>
<%= t('welcome.head.title') %>
<% end %>

<% content_for :meta_description do %>
<%= t('welcome.head.description') %>
<% end %>

<% content_for :header do %>
  <div class="banner banner-full-height overlay-black kpter-header">
    <div class="container text-center">
      <h1>Go for the Best Team</h1>
      <h5>Empower your team and build trust, with <strong>KPTER</strong></h5>
      <br><br><br>
      <p><%= link_to "Get Started - It's Free", new_user_registration_path, class: 'btn btn-white btn-lg btn-outline' %></p>
    </div>
  </div>
<% end %>
<section class="no-border-bottom">
  <div class="container">
    <div class="row feature">
      <div class="col-sm-6 feature-image">
        <%= image_tag("feature1.jpg", alt: t('welcome.feature_1.header')) %>
      </div>
      <div class="col-sm-6 feature-text">
        <header class="section-header text-left">
          <h2><%= t('welcome.feature_1.header') %></h2>
          <p><%= t('welcome.feature_1.description') %></p>
        </header>
      </div>
    </div>
  </div>
</section>
<section class="no-border-bottom bg-gray-lighter">
  <div class="container">
    <div class="row feature">
      <div class="col-sm-6 feature-text">
        <header class="section-header text-left">
          <h2><%= t('welcome.feature_2.header') %></h2>
          <p><%= t('welcome.feature_2.description') %></p>
        </header>
      </div>
      <div class="col-sm-6 feature-image">
        <%= image_tag("feature2.png", alt: t('welcome.feature_2.header')) %>
      </div>
    </div>
  </div>
</section>
<section class="no-border-bottom">
  <div class="container">
    <div class="row feature">
      <div class="col-sm-6 feature-image">
        <%= image_tag("feature3.png", alt: t('welcome.feature_3.header')) %>
      </div>
      <div class="col-sm-6 feature-text">
        <header class="section-header text-left">
          <h2><%= t('welcome.feature_3.header') %></h2>
          <p><%= t('welcome.feature_3.description') %></p>
        </header>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container">
    <p class="text-center hero"><%= link_to "GET STARTED - IT'S FREE", new_user_registration_path %></p>
  </div>
</section>
<section class="no-border-bottom text-center">
  <div class="container">
    <%= image_tag("app_icon.png", alt: "KPTER App", class: "kpter-app-logo") %>
    <header class="section-header">
      <h2>Mobile</h2>
      <p>On Your iPhone.</p>
      <div class="app">
        <a href="//itunes.apple.com/jp/app/kpter/id1118192741?mt=8" ontouchstart="" target="_blank">
          <%= image_tag("app_store_badge-us-uk.svg", alt: "App Store") %>
        </a>
      </div>
      <div class="app-notice">
        <small class="text-gray">
          <%= t('welcome.mobile.notice_html') %>
        </small>
      </div>
      <div class="app">
        <%= link_to("For more information...", sp_path, class: "btn btn-default") %>
      </div>
    </header>
  </div>
</section>
