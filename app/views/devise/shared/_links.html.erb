<ul class="mdl-list">
  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <li><%= link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name), class: "kpter-link mdl-color-text--primary mdl-typography--caption" %></li>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li><%= link_to t('.didn_t_receive_confirmation_instructions', :default => "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: "kpter-link mdl-color-text--primary mdl-typography--caption" %></li>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li><%= link_to t('.didn_t_receive_unlock_instructions', :default => "Didn't receive unlock instructions?"), new_unlock_path(resource_name), class: "kpter-link mdl-color-text--primary mdl-typography--caption" %></li>
  <% end %>
