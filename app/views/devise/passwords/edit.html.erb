<% content_for :head_title do %>
  <%= t('.change_your_password', :default => 'Change your password') %>
<% end %>
<div class="kpter-form-middle mdl-cell mdl-grid mdl-grid--no-spacing">
  <div class="mdl-typography--display-1-color-contrast"><%= t(".change_your_password", :default => "Forgot your password?") %></div>
  <%= render partial: "devise/shared/error_messages", locals: {object: resource} %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.password_field :password, autocomplete: true, autocomplete: "off", class: "mdl-textfield__input", maxlength: 128, required: true %>
      <%= f.label :password, class: "mdl-textfield__label" %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.password_field :password_confirmation, class: "mdl-textfield__input", maxlength: 128, required: true %>
      <%= f.label :password_confirmation, class: "mdl-textfield__label" %>
    </div>
    <%= button_tag t('.change_my_password', :default => "Change my password"), class: "mdl-button mdl-button--colored mdl-js-button float-right mdl-js-ripple-effect" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
