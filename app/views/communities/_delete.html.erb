<div class="mdl-dialog__content kpter-dialog-content2">
  <button class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect close">
    <i class="material-icons">close</i>
    <span class="esc">esc</span>
  </button>
  <h4><%= t('community.delete.title', { community_name: current_community.name }) %></h4>
  <%= form_for(current_community, :html => { :method => :delete }) do |f| %>
    <div class="mdl-typography--body-1-color-contrast">
      <%= t('community.delete.body', { community_name: current_community.name }) %>
    </div>
    <ul class="notice">
      <li> <%= t('community.delete.notice1') %></li>
      <li> <%= t('community.delete.notice2') %></li>
      <li> <%= t('community.delete.notice3') %></li>
    </ul>
    <button class="mdl-button mdl-js-button mdl-button--accent float-right mdl-js-ripple-effect"><%= t('community.delete.i_will') %></button>
  <% end %>
</div>
