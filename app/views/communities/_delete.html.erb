<div class="mdl-dialog__content kpter-dialog-content2">
  <button class="mdl-button mdl-js-button mdl-button--icon close">
    <i class="material-icons">close</i>
    <span class="esc">esc</span>
  </button>
  <h4>Delete <%= current_community.name %></h4>
  <%= form_for(current_community, :html => { :method => :delete }) do |f| %>
    <div class="mdl-typography--body-1-color-contrast">
      Are you sure you want to delete <%= current_community.name %>?
    </div>
    <ul class="notice">
      <li>Anyone will not be able to access this community any more.</li>
      <li>All boards and tasks will be deleted.</li>
      <li>Deleted data can not be restored again.</li>
    </ul>
    <button class="mdl-button mdl-js-button mdl-button--accent float-right">Yes, Delete this community</button>
  <% end %>
</div>
