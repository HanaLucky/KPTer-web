<% if object.errors.any? %>
  <script>
    toastr.options = {
      "closeButton": true,
      "timeOut": "0",
      "extendedTimeOut": "0",
    }
    toastr.warning('<ul><%= raw(resource.errors.full_messages.map { |msg| content_tag(:li, msg) }.join) %></ul>', 'This form contains <%= pluralize(object.errors.count, 'error') %>.')
  </script>
<% end %>
