<%= stylesheet_link_tag 'mdb/3.4.1/mdb', media: 'all' %>
<%= stylesheet_link_tag 'mdb_style', media: 'all' %>

<div class="panel-heading">
  <h4 class="text-center">
    <%= t('.sign_up', :default => "Sign up") %>
  </h4>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card-panel">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="input-field col">
            <%= f.email_field :email, class: "validate", required: true %>
            <%= f.label :email, class: "required" %>
          </div>
          <div class="input-field col">
            <%= f.text_field :nickname, class: "validate", required: true %>
            <%= f.label :nickname, class: "required" %>
          </div>
          <div class="input-field col">
            <%= f.password_field :password, class: "validate", required: true %>
            <%= f.label :password, class: "required" %>
          </div>
          <div class="input-field col">
            <%= f.password_field :password_confirmation, class: "validate", required: true %>
            <%= f.label :password_confirmation, class: "required" %>
          </div>
          <p class="help-block"><small>* Required</small></p>
          <%= button_tag t('.sign_up', :default => "Sign up"), class: 'btn btn-primary waves-effect waves-light' %>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'mdb/3.4.1/mdb' %>
<%= javascript_include_tag 'mdb_style' %>
